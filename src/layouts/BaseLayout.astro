---
import "../styles/normalize.css";
import "../styles/app.css";
const { title = "a7journal" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta
            name="description"
            content="a7journal - a constrained journal for focused writing."
        />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600&family=Patrick+Hand&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <main>
            <slot />
        </main>
    </body>
</html>
